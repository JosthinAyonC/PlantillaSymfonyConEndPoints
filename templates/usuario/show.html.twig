{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
<br>
<div class="container-fluid">
    <div class="bg-secondary rounded h-100 p-4">
        <div class="bg-secondary rounded h-100 p-4">

            <div class="row h-100 align-items-center justify-content-center">
                <div class="bg-secondary rounded h-100 p-4">
                    <h2 class="mb-4">Vistazo de usuario</h2>

                    <table class="table">
                        <!-- //CODIGO AQUI -->
                        <div class="invisible">
                            <input type="text" id="idUsuario" value={{idUsuario}} name="id">
                        </div>
                        <tbody>
                            <tr>
                                <th><h4>IdUsuario</h4></th>
                                <td>{{idUsuario}}</td>
                            </tr>
                            <tr>
                                <th><h4>Nombre</h4></th>
                                <td id="nombre"></td>
                            </tr>
                            <tr>
                                <th><h4>Apellido</h4></th>
                                <td id="apellido"></td>
                            </tr>
                            <tr>
                                <th><h4>Correo</h4></th>
                                <td id="correo"></td>
                            </tr>
                            <tr>
                                <th><h4>Roles</h4></th>
                                <td id="roles"></td>
                            </tr>
                            <tr>
                                <th><h4>Estado</h4></th>
                                <td id="estado"></td>
                            </tr>
                        </tbody>

                        <!-- SHOW/EDIT -->
                        
                    </table>
                    <div>
                        <a href="http://127.0.0.1:8000/usuario" type="button"
                            class="btn btn-primary py-3 w-100 mb-4">Volver</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="{{asset('js/Usuario/datosUsuario.js')}}"></script>

{% endblock %}