{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
<br>
<div class="container-fluid">
    
    <div class="row h-100 align-items-center justify-content-center">
        <div class="bg-secondary rounded h-100 p-4">
            <h2 class="mb-4">Vistazo de usuario</h2>

            <table class="table">
                <!-- //CODIGO AQUI -->

                <tbody>
                    <tr>
                        <th>IdUsuario</th>
                        <td>{{ usuario.idUsuario }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ usuario.nombre }}</td>
                    </tr>
                    <tr>
                        <th>Apellido</th>
                        <td>{{ usuario.apellido }}</td>
                    </tr>
                    <tr>
                        <th>Correo</th>
                        <td>{{ usuario.correo }}</td>
                    </tr>
                    <tr>
                        <th>Clave</th>
                        <td>{{ usuario.clave }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ usuario.roles ? usuario.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Estado</th>
                        <td>{{ usuario.estado }}</td>
                    </tr>
                </tbody>

                <!-- SHOW/EDIT -->

            </table>
            <a class="btn btn-primary m-2" href="{{ path('app_usuario_index') }}">Volver</a>

            <a class="btn btn-primary m-2"
                href="{{ path('app_usuario_edit', {'idUsuario': usuario.idUsuario}) }}">Editar</a>





            {{ include('usuario/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}