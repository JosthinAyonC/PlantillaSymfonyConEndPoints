{% extends 'base.html.twig' %}

{% block title %}New Usuario{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">

            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <a href="#" class="">
                        <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Nuevo registro.</h3>
                    </a>
                    <h3>Aplication</h3>
                </div>
                <form id="nuevo-usuario" >

                    <div class="form-floating mb-3">
                        <input type="text" id="nombre" class="form-control" name="nombre" placeholder="Nombre">

                        <label for="nombre">Nombre</label>

                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" id="apellido" class="form-control" name="apellido" placeholder="Apellido">

                        <label for="apellido">Appelido</label>

                    </div>
                    <div class="form-floating mb-3">
                        <input type="email" id="correo" class="form-control" name="correo" placeholder="Correo">

                        <label for="correo">Email address</label>

                    </div>
                    <div class="form-floating mb-4">
                        <input type="password" id="clave" class="form-control" name="clave" placeholder="Password">

                        <label for="clave">Password</label>
                    </div>
                    <div class="form-floating mb-3">
                        <select class="form-select" for="roles" name="roles" aria-label="Floating label select example">
                            <option id="roles" value="['ROLE_ADMIN']">Administrador</option>
                            <option id="roles" value="['ROLE_RECEPCION']">Recepcionista</option>
                            <option id="roles" value="['ROLE_LIMPIEZA']">Personal de limpieza</option>
                        </select>
                        <label for="roles">ROL</label>

                    </div>

                    <div class="form-floating mb-3">
                        <select class="form-select" for="estado" name="estado"
                            aria-label="Floating label select example">
                            <option id="estado" value="A">Activo</option>
                            <option id="estado" value="I">Inactivo</option>
                        </select>
                        <label for="roles">Estado</label>

                    </div>

                    <div>
                        <button id="btnNuevo" type="submit"
                         class="btn btn-primary py-3 w-100 mb-4">Crear</button>
                    </div>


                    <p class="text-center mb-0"><a href="http://127.0.0.1:8000/usuario">Volver</a></p>

            </div>

            </form>
        </div>
    </div>
</div>

<script>
    async function NuevoUsuarios() {
        
        try {
            let formUsuario = document.getElementById("nuevo-usuario");
            let btn_nuevo = document.getElementById("btnNuevo");

            btn_nuevo.addEventListener("click", async function () {

                let formData = new FormData(formUsuario);
                
                let response = await fetch(`http://127.0.0.1:8000/usuario/nuevo`, {
                    method: 'POST',
                    body: JSON.stringify(Object.fromEntries(formData))
                });
                console.log(Object.fromEntries(formData))
                stop()
            });

        } catch (error) {
            console.log(error);
        }
    }
    NuevoUsuarios();
</script>

{% endblock %}