{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{{parent()}}


    {{ form_start(registrationForm) }}
    <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a href="index.html" class="">
                                <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Registrate</h3>
                            </a>
                            <h3>Aplication</h3>
                        </div>
                        <div class="form-floating mb-3">
                            {# <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"> #}
                            {{ form_widget(registrationForm.correo) }} 
                            <label for="floatingInput">Email address</label>
                            
                        </div>
                        <div class="form-floating mb-3">
                            {# <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"> #}
                            {{ form_widget(registrationForm.nombre) }} 
                            <label for="floatingInput">Nombre</label>
                            
                        </div>
                        <div class="form-floating mb-3">
                            {# <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com"> #}
                            {{ form_widget(registrationForm.apellido) }} 
                            <label for="floatingInput">Appellido</label>
                            
                        </div>
                        <div class="form-floating mb-4">
                            {{ form_widget(registrationForm.plainPassword, {
                         label: 'Password'
                        }) }} 
                        <label for="floatingPassword">Password</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div class="form-check">
                                {{ form_row(registrationForm.agreeTerms) }}
                            </div>
                            <a href="">Forgot Password</a>
                        </div>
                        <button type="submit" title="Ingresar" name="Ingresar" class="btn btn-primary py-3 w-100 mb-4">Sign In</button>
                        <p class="text-center mb-0">Don't have an Account? <a href="{{path('app_register')}}">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(registrationForm) }}

{% endblock %}
